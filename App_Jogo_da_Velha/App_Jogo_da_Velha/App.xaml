<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_Jogo_da_Velha.App">
    
    <Application.Resources>

        <ResourceDictionary>

            <Style x:Key="fonte_customizada" TargetType="Label">

                <Setter Property="FontFamily">

                    <Setter.Value>

                        <OnPlatform x:TypeArguments="x:String" 
                                    iOS="Astrud.ttf"
                                    Android="Astrud.ttf#Astrud"/>

                    </Setter.Value>

                </Setter>

                <Setter Property="HorizontalTextAlignment" Value="Center"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="FontSize" Value="85"/>
                <Setter Property="TextColor" Value="Red"/>


            </Style>

            <Style x:Key="borda_redonda" TargetType="Button">

                <Setter Property="BorderRadius" Value="10"/>

            </Style>

            <Style x:Key="texto_grande" TargetType="Button" BaseResourceKey="borda_redonda">

                <Setter Property="FontSize" Value="50"/>

            </Style>
            
        </ResourceDictionary>

    </Application.Resources>
    
</Application>